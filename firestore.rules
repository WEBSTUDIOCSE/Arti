rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for now (update for production)
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Specific rules for active sessions
    match /activeSessions/{sessionId} {
      allow read, write: if true;
      
      // Nested collection for participants
      match /sessionParticipants/{participantId} {
        allow read, write: if true;
      }
    }
  }
}
